/ {
	combos {
		compatible = "zmk,combos";
		combo_esc {
			timeout-ms = <25>;
			key-positions = <1 2>;
			layers = <0 1 2 3 4>;
			bindings = <&kp ESC>;
		};

		combo_tab {
			timeout-ms = <25>;
			key-positions = <11 12>;
			layers = <0 1 2 3 4>;
			bindings = <&kp TAB>;
		};

		combo_ret {
			timeout-ms = <25>;
			key-positions = <17 18>;
			layers = <0 1 2 3 4>;
			bindings = <&kp RET>;
		};

		combo_bspc {
			timeout-ms = <25>;
			key-positions = <7 8>;
			layers = <0 1 2 3 4>;
			bindings = <&kp BSPC>;
		};

		combo_del {
			timeout-ms = <25>;
			key-positions = <8 9>;
			layers = <0 1 2 3 4>;
			bindings = <&kp DEL>;
		};

		combo_caps_word {
			timeout-ms = <25>;
			key-positions = <10 11>;
			layers = <0 1 2 3 4>;
			bindings = <&caps_word>;
		};

		combo_apos {
			timeout-ms = <25>;
			key-positions = <27 28>;
			layers = <0 1 2 3 4>;
			bindings = <&kp APOS>;
		};

		combo_under {
			timeout-ms = <25>;
			key-positions = <21 22>;
			layers = <0 1 2 3 4>;
			bindings = <&kp UNDER>;
		};

		combo_admin {
			timeout-ms = <25>;
			key-positions = <31 32>;
			layers = <0 1 2 3 4>;
			bindings = <&mo ADM>;
		};
	};
};

/ {
	macros {

	scope:
		scope {
			compatible = "zmk,behavior-macro";
			wait-ms = <0>;
			tap-ms = <0>;
            binding-cells = <0>;
			bindings = < &macro_tap &kp COLON >, < &macro_tap &kp COLON > ;
		};

	};
};

