			compatible = "zmk,behavior-hold-tap";
			#binding-cells = <2>;
			flavor = "tap-preferred";
			tapping - term - ms = <200>;
			quick - tap - ms = <175>;
			require - prior - idle - ms = <100>;
			bindings = <&kp>, <&kp>;
		};

	hml:
		home_row_mod_left {
